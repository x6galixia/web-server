<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../../css/local/signup.css" />
    <title><%= title %></title>
  </head>
  <body>
    <div class="container">
      <!-- Preview Section -->
      <div class="preview">
        <h2>Welcome to Our Platform</h2>
        <p>
          Our platform offers the best tools and services to help you succeed.
          Sign up today and take the first step toward achieving your goals.
        </p>
      </div>

      <!-- Form Section -->
      <div class="form-container">
        <form id="signupForm" action="/signup" method="POST">
          <h1>Sign Up</h1>

          <% if (typeof error !== 'undefined') { %>
            <div class="message error-message">
              <%= error %>
            </div>
          <% } %>

          <% if (typeof success !== 'undefined') { %>
            <div class="message success-message">
              <%= success %>
            </div>
          <% } %>

          <!-- Name Field -->
          <div class="input-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="<%= typeof name !== 'undefined' ? name : '' %>" class="<%= errorField === 'name' ? 'error-input' : '' %>" require />
            <div class="error" id="nameError"></div>
          </div>

          <!-- Email Field -->
          <div class="input-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>" class="<%= errorField === 'email' ? 'error-input' : '' %>" require />
            <div class="error" id="emailError"></div>
          </div>

          <!-- Username Field -->
          <div class="input-group">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" value="<%= typeof username !== 'undefined' ? username : '' %>" class="<%= errorField === 'username' ? 'error-input' : '' %>" require />
            <div class="error" id="usernameError"></div>
          </div>

          <!-- Password Field -->
          <div class="input-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" class="<%= errorField === 'password' ? 'error-input' : '' %>" required />
            <div class="error" id="passwordError"></div>
          </div>

          <!-- Confirm Password Field -->
          <div class="input-group">
            <label for="confirmPassword">Confirm Password:</label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="<%= errorField === 'confirmPassword' ? 'error-input' : '' %>" require />
            <div class="error" id="confirmPasswordError"></div>
          </div>

          <!-- Hidden Role Field -->
          <input type="hidden" id="role" name="role" value="user" />

          <!-- Submit Button -->
          <button type="submit">Sign Up</button>

          <!-- Login Link -->
          <p>
            Already have an account? Try logging in <a href="/login">here</a>.
          </p>
        </form>
      </div>
    </div>

    <!-- Script -->
    <script src="../../js/local/signup.js"></script>
  </body>
</html>